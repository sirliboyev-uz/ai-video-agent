# Application Settings
APP_NAME="AI Video Agent"
DEBUG=True
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_video_agent

# Redis (Celery + Cache)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# OpenAI API
OPENAI_API_KEY=sk-proj-...
OPENAI_ORG_ID=org-...  # Optional
AI_PROVIDER=openai  # openai or anthropic

# Anthropic API (Optional)
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs Voice Synthesis
ELEVENLABS_API_KEY=...
ELEVENLABS_VOICE_ID=...  # Your custom cloned voice ID
ELEVENLABS_MODEL=eleven_turbo_v2_5  # or eleven_multilingual_v2

# YouTube API
YOUTUBE_CLIENT_ID=...
YOUTUBE_CLIENT_SECRET=...
YOUTUBE_REFRESH_TOKEN=...  # Generated after OAuth flow
YOUTUBE_API_KEY=...

# TikTok API
TIKTOK_CLIENT_KEY=...
TIKTOK_CLIENT_SECRET=...
TIKTOK_ACCESS_TOKEN=...  # Generated after OAuth flow

# Instagram API (limited functionality)
INSTAGRAM_ACCESS_TOKEN=...
INSTAGRAM_ACCOUNT_ID=...

# Storage (MinIO - Self-hosted S3-compatible)
STORAGE_PROVIDER=minio  # minio or local
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ai-video-agent
MINIO_SECURE=False  # True for HTTPS

# Local Storage (development fallback)
LOCAL_STORAGE_PATH=./data/media

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cost Limits (prevent runaway costs)
MAX_DAILY_VIDEOS=10
MAX_MONTHLY_COST_USD=500
ALERT_EMAIL=your-email@example.com

# Video Settings
DEFAULT_VIDEO_DURATION=60  # seconds
DEFAULT_ASPECT_RATIO=9:16  # vertical
DEFAULT_RESOLUTION=1080x1920
VIDEO_CODEC=libx264
VIDEO_CRF=23  # 18-28, lower = higher quality

# Script Generation
DEFAULT_SCRIPT_STYLE=educational  # educational, entertaining, inspirational
DEFAULT_NICHE=finance  # finance, wealth, productivity, mindset
DEFAULT_BRAND_VOICE="Professional yet conversational, focusing on actionable finance tips"

# Platform Publishing
AUTO_PUBLISH_YOUTUBE=True
AUTO_PUBLISH_TIKTOK=False  # Requires manual approval initially
YOUTUBE_DEFAULT_VISIBILITY=public  # public, unlisted, private
YOUTUBE_DEFAULT_CATEGORY=27  # 27 = Education

# Analytics
ANALYTICS_REFRESH_INTERVAL_HOURS=1
METRICS_RETENTION_DAYS=365

# Rate Limiting
MAX_VIDEOS_PER_DAY_PER_USER=3
MAX_API_REQUESTS_PER_MINUTE=60

# Monitoring (Optional)
SENTRY_DSN=https://...@sentry.io/...
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Feature Flags
ENABLE_VOICE_CLONING=True
ENABLE_PICTORY_FALLBACK=False  # Use Pictory if FFmpeg fails
ENABLE_BATCH_GENERATION=True
ENABLE_ANALYTICS_DASHBOARD=True
ENABLE_EMAIL_CAPTURE=True

# Development
MOCK_EXTERNAL_APIS=False  # Use mock responses for testing
SKIP_VIDEO_GENERATION=False  # Skip actual video creation for testing
